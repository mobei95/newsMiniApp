.tab-bar-main {
  display: flex;
  width: 100%;
  height: 70rpx;
  border-radius: 30rpx;
  background: #fff;
}
.tab-bar-main .tab {
  line-height: 70rpx;
  flex-basis: 50%;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #d6483d;
  text-align: center;
}
.tab-bar-main .tab-active {
  color: #fff;
  background-image: linear-gradient(to right, #e67f3c, #df4544)
}