.rule-page {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
}
.rule-page-head {
  display: block;
  width: 100vw;
  height: 340rpx;
}
.rule-page-main {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 22rpx 35rpx;
  box-sizing: border-box;
  background: #db4245;
}
.tab-content {
  flex: 1;
  padding: 15rpx 30rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  height: 100%;
  background: #fff;
}